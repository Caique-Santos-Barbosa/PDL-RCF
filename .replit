language = "python3"
run = "python test_replit_compatibility.py && python replit_start.py && python app.py"

[nix]
channel = "stable-23_11"

[env]
PYTHONPATH = "${PYTHONPATH}:/home/runner/${REPL_SLUG}"
PYTHONUNBUFFERED = "1"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true

[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = [ "pylsp" ]

[deployment]
run = ["sh", "-c", "python app.py"]
deploymentTarget = "cloudrun"

# Configurações para melhorar o suporte
[ai]
enabled = true
model = "gpt-4"

[ai.features]
codeCompletion = true
codeExplanation = true
codeGeneration = true
bugDetection = true
refactoring = true

# Configurações de performance
[performance]
memoryLimit = "2GB"
cpuLimit = "2"

# Configurações de debug
[debug]
enabled = true
port = 5000 