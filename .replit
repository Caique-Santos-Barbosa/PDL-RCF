
[nix]
channel = "stable-23_11"

[deployment]
run = ["python", "app.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[env]
FLASK_ENV = "production"
PYTHONPATH = "$PYTHONPATH:."
REPLIT_MODE = "true"
DEBUG_MODE = "true"

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[ai]
enabled = true
model = "gpt-4"

[ai.features]
codeCompletion = true
codeExplanation = true
codeGeneration = true
bugDetection = true
refactoring = true

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[performance]
memoryLimit = "2GB"
cpuLimit = "2"

[debug]
enabled = true
port = 5000

[interpreter]
command = ["python", "-u", "app.py"]

[workflows]
runButton = "Desenvolvimento com IA"

[[workflows.workflow]]
name = "Desenvolvimento com IA"
author = 46436389
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸ¤– Iniciando Porta Facial V1 no Replit...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python replit_start.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
